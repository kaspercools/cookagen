{
    "templateFolder": ".templates",
    "generators": [
        {
            "cmd": "domain",
            "alias": "d",
            "targetFolder": "data",
            "templateRoot": "domain",
            "templates": [
                {
                    "file": "entity.tpl",
                    "resFile": "{{$ENTITY|hyphenise}}"
                }
            ],
            "ext": "cs",
            "parseList": [
                {
                    "val": "entity",
                    "match": "$ENTITY"
                }
            ]
        },
        {
            "cmd": "repo",
            "alias": "r",
            "targetFolder": "Repositories/{{$ENTITY}}",
            "autoCreateFolders": true,
            "templateRoot": "repositories",
            "templates": [
                {
                    "file": "repository.tpl",
                    "resFile": "{{$ENTITY}}Repository"
                },
                {
                    "file": "irepository.tpl",
                    "resFile": "I{{$ENTITY}}Repository"
                }
            ],
            "ext": "cs",
            "parseList": [
                {
                    "val": "entity",
                    "match": "$ENTITY"
                }
            ]
        },
        {
            "cmd": "service",
            "alias": "s",
            "targetFolder": "Services/{{$ENTITY}}",
            "autoCreateFolders": true,
            "templateRoot": "services",
            "templates": [
                {
                    "file": "service.tpl",
                    "resFile": "{{$ENTITY}}Service"
                },
                {
                    "file": "iservice.tpl",
                    "resFile": "I{{$ENTITY}}Service"
                }
            ],
            "ext": "cs",
            "parseList": [
                {
                    "val": "entity",
                    "match": "$ENTITY"
                },
                {
                    "val": "Guid",
                    "match": "$KEY"
                }
            ],
            "chain": [
                "repo"
            ]
        },
        {
            "cmd": "validation",
            "alias": "v",
            "targetFolder": "Validation/{{$ENTITY}}",
            "autoCreateFolders": true,
            "templateRoot": "validation",
            "templates": [
                {
                    "file": "validator.tpl",
                    "resFile": "{{$CMD}}{{$ENTITY}}Validator"
                }
            ],
            "ext": "cs",
            "parseList": [
                {
                    "val": "command",
                    "match": "$CMD"
                },
                {
                    "val": "entity",
                    "match": "$ENTITY"
                }
            ],
            "alterations": [
                {
                    "name": "validationFactory",
                    "targetFolder": "Validation/Factory",
                    "autoCreateFolders": true,
                    "templateRoot": "validation",
                    "templates": [
                        {
                            "file": "ivalidationfactory.tpl",
                            "target": "IValidatorFactory.cs"
                        },
                        {
                            "file": "validationfactory.tpl",
                            "target": "ValidatorFactory.cs"
                        }
                    ],
                    "entryPoint": "$cookagen$",
                    "ext": "cs",
                    "parseList": [
                        {
                            "val": "command",
                            "match": "$CMD"
                        },
                        {
                            "val": "entity",
                            "match": "$ENTITY"
                        }
                    ]
                }
            ]
        },
        {
            "cmd": "command",
            "alias": "c",
            "targetFolder": "Commands/{{$ENTITY}}",
            "autoCreateFolders": true,
            "templateRoot": "commands",
            "templates": [
                {
                    "file": "command.tpl",
                    "resFile": "{{$CMD}}{{$ENTITY}}Command"
                },
                {
                    "file": "commandhandler.tpl",
                    "resFile": "{{$CMD}}{{$ENTITY}}CommandHandler"
                }
            ],
            "ext": "cs",
            "parseList": [
                {
                    "val": "command",
                    "match": "$CMD"
                },
                {
                    "val": "entity",
                    "match": "$ENTITY"
                }
            ],
            "chain": [
                "validation"
            ]
        }
    ]
}